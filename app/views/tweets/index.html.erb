<div class="container text-center">
  <p style="color: green"><%= notice %></p>
  <h1>Listado de Pajarracos </h1>
  <div class="row justify-content-center">
    <% @tweets.each do |tweet| %>
      <div class="col-md-4 mb-4">
        <div class="card profile-card-2">
          <div class="card-img-block">
            <%= image_tag("fondo.jpg", class: "img-fluid", alt: "Card image cap") %>
          </div>
          <div class="card-body pt-5">
            <img src="https://randomuser.me/api/portraits/men/64.jpg" alt="profile-image" class="profile"/> 
            <%= render tweet %>
            <div class="icon-block">
              <%= link_to tweet, class: "edit-icon" do %>
                <i class="fa fa-pencil-square">
                  <span class="letter-e">VER</span>
                </i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  </div>
</div>
